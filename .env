# Secret key za Django (produkcija)
DJANGO_SECRET_KEY=replace_this_with_a_real_secret_key

# Debug mod (True za lokal, False za produkciju)
DEBUG=True

# Dozvoljeni hostovi, odvojeni zarezom
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Koristi SQLite za lokalni razvoj? True/False
USE_SQLITE=True

# ------------------------------
# POSTGRESQL (za produkciju)
# ------------------------------
POSTGRES_DB=mydb
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ------------------------------
# CELERY
# ------------------------------
# Redis URL za broker i result backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Redis
REDIS_URL=redis://redis:6379/0